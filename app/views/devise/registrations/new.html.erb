<h2>Cadastrar usuário</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome,
                label: "Nome",
                required: true,
                autofocus: true ,
                input_html: { autocomplete: "nome" }%>
    <%= f.input :email,
                label: "E-mail",
                required: true,
                input_html: { autocomplete: "e-mail" }%>
    <%= f.input :password,
                label: "Senha",
                required: true,
                hint: ("#{@minimum_password_length} mínimo" if @minimum_password_length),
                input_html: { autocomplete: "nova senha" } %>
    <%= f.input :password_confirmation,
                label: "Confirmação de senha",
                required: true,
                input_html: { autocomplete: "repita a senha" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Cadastrar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
